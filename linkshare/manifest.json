{
  "manifest_version": 2,
  "name": "Sherrif",
  "description": "A small link sharing extension",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/badge.png",
    "default_popup": "sherrif.html",
    "default_title": "Sherrif"
  },
  "background": {
    "scripts": ["js/zepto120.js","js/pouchdb-7.1.1.js","js/background.js"],
    "persistent": false
  },
  "options_page": "manage.html",
  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}