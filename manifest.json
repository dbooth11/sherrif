{
  "manifest_version": 2,
  "name": "MaxxLink",
  "description": "A  link sharing utility",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/save.png",
    "default_popup": "linkshare.html",
    "default_title": "Linkshare"
  },
  "background": {
    "scripts": ["js/zepto.js","js/pouchdb.js","js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}